<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singnup"
    android:background="@color/background">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient"
        android:id="@+id/signupdesign"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create Account"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/createtittle"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createtittle"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp">


    <EditText

        android:id="@+id/firstname"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:layout_marginLeft="0dp"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"/>
    <EditText
        android:id="@+id/lastname"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstname"
        android:backgroundTint="@color/black"
        android:layout_alignTop="@+id/firstname"
        android:hint="Last name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/black"
        android:hint="Email Address:example@mail.com"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:id="@+id/email"
        android:ems="20"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:textSize="20dp"
        android:layout_alignLeft="@id/email"
        android:id="@+id/spin"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"

        />


    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:backgroundTint="@color/black"
        android:hint="Phone number"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@id/email"
        android:layout_toRightOf="@+id/spin"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:backgroundTint="@color/black"
        android:hint="Create password"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/spin"
        android:layout_alignLeft="@id/email"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:backgroundTint="@color/black"
        android:hint="Re-enter password"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/password"
        android:layout_alignLeft="@id/email"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/createaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@color/orange"
        android:text="Create Account"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help?"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@id/createaccount"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>
    </RelativeLayout>


</RelativeLayout>