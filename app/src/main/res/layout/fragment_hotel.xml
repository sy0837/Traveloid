<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotel"
    android:background="@color/background"
    >

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradient"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City, Area and Hotel"
        android:backgroundTint="#000"
        android:textColorHint="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/citysearch"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_below="@id/citysearch"
        android:layout_alignLeft="@id/citysearch">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Check-in"
        android:inputType="date"
        android:backgroundTint="#000"
        android:id="@+id/checkin"
        android:textColorHint="@color/white"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Check-out"
        android:inputType="date"
        android:backgroundTint="#000"
        android:layout_toRightOf="@id/checkin"
        android:id="@+id/checkout"
        android:textColorHint="@color/white"
        android:layout_marginLeft="40dp"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check"
        android:layout_alignLeft="@id/check"
        android:layout_marginTop="10dp"
        android:id="@+id/spin"
        android:layout_marginRight="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomrelative">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms"
        android:id="@+id/rooms"
        android:layout_alignParentLeft="true"

        android:textSize="19dp"
        android:textColor="@color/white"
        android:paddingLeft="0dp"/>
        <EditText
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rooms"
            android:inputType="number"
            android:id="@+id/roomno"
            android:textSize="19dp"
            android:paddingBottom="8dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:backgroundTint="@color/black"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adultrelative"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults"
                android:id="@+id/adults"
                android:layout_alignParentLeft="true"

                android:textSize="19dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"/>
            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/adults"
                android:inputType="number"
                android:id="@+id/adultsno"
                android:textSize="19dp"
                android:paddingBottom="8dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:backgroundTint="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/childrelative"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child*"
                android:id="@+id/child"
                android:layout_alignParentLeft="true"

                android:textSize="19dp"
                android:textColor="@color/white"
                android:paddingLeft="0dp"/>
            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/child"
                android:inputType="number"
                android:id="@+id/childno"
                android:textSize="19dp"
                android:paddingBottom="8dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:backgroundTint="@color/black"
                />
        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:background="#064acb"
        android:textColor="@color/white"
        android:layout_below="@id/spin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"/>







</RelativeLayout>